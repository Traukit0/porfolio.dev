---
const { href } = Astro.props

// Detectar si es un enlace externo o archivo PDF
const isExternal = href.startsWith('http') || href.startsWith('https') || href.startsWith('mailto:') || href.endsWith('.pdf')

// Configurar atributos seg√∫n el tipo de enlace
const linkAttributes = isExternal 
  ? { 
      target: '_blank', 
      rel: 'noopener noreferrer' 
    }
  : {}
---

<a 
  href={href} 
  role="link" 
  class="inline-flex items-center text-lg font-medium text-yellow-500 dark:text-yellow-200 dark:hover:text-yellow-300 hover:text-yellow-700"
  {...linkAttributes}
>
  <slot />
</a>